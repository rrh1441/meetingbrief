{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true
  },
  "include": [
    "src/background.ts",
    "src/content.ts", 
    "src/popup/**/*",
    "src/utils/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    "test",
    "src/app/**/*",
    "src/components/**/*",
    "src/hooks/**/*",
    "src/lib/**/*",
    "src/middleware.ts"
  ]
}
